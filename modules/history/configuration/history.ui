<configuration-ui>
	<section name="Chat">
		<tab name="History">
			<group-box name="General">
				<check-box caption="Enable history saving" config-section="History" config-item="EnableSaving" id="history/save" />
				<check-box caption="Save chats in history" config-section="History" config-item="SaveChats" id="history/savechats" />
				<check-box caption="Save status changes" config-section="History" config-item="SaveStatusChanges" id="history/savestatuschanges"/>
			</group-box>
			<group-box name="Citation" id="history/citation">
				<spin-box caption="Message citation in chat window" config-section="History" config-item="ChatHistoryCitation" min-value="0" max-value="200" />
				<slider caption="Don't cite messages older than" config-section="History" config-item="ChatHistoryQuotationTime" min-value="-744" max-value="-1" page-step="24" id="history/dontCiteOldMessages" />
				<label caption="." id="history/dontCiteOldMessagesLabel" />
			</group-box>
			<group-box name="Chats history" id="history/chats">
				<check-box caption="Save chats with anonymous users" config-section="History" config-item="SaveChatsWithAnonymous" id="history/savechatswithanonymous" />
				<check-box caption="Save for all users" config-section="History" config-item="SaveChatsForAll" id="history/savechatsforall" />
			</group-box>
			<group-box name="Status changes" id="history/statusChanges">
				<check-box caption="Ignore changes from available / busy to busy / available" config-section="History" config-item="IgnoreSomeStatusChanges" id="history/ignoresomestatuschanges" />
				<check-box caption="Save status only with description" config-section="History" config-item="SaveOnlyStatusWithDescription" id="history/saveonlystatuswithdescription" />
				<check-box caption="Save for all users" config-section="History" config-item="SaveStatusChangesForAll" id="history/savestatusforall" />
			</group-box>
		</tab>
	</section>
	<section name="Shortcuts">
		<tab name="General">
			<group-box name="Chat" id="history/shortCuts">
				<hot-key-edit caption="View history" config-section="ShortCuts" config-item="kadu_viewsqlhistory" />
			</group-box>
		</tab>
	</section>
</configuration-ui>
